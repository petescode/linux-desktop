# Custom default GNOME settings for file-chooser (affects Nautilus)
[org/gtk/settings/file-chooser]
sort-directories-first=true
show-hidden=true

[org/gnome/desktop/interface]
font-name='DejaVu Sans Book 11'
monospace-font-name='DejaVu Sans Mono 11'
document-font-name='DejaVu Sans 11'
gtk-theme='Adwaita-dark'
icon-theme='Papirus'

# Custom default GNOME settings for Nautilus
[org/gnome/nautilus/preferences]
default-folder-viewer='list-view'
thumbnail-limit='100'

[org/gnome/desktop/wm/preferences]
button-layout='close,minimize,maximize:appmenu'
theme='Adwaita-dark'
titlebar-font='DejaVu Sans Bold 11'

[org/gnome/shell]
favorite-apps=['firefox.desktop', 'google-chrome.desktop', 'org.gnome.Nautilus.desktop', 'code.desktop', 'org.gnome.Screenshot.desktop', 'org.gnome.Calculator.desktop', 'org.keepassxc.KeePassXC.desktop']

# When to lock the screen
[org/gnome/desktop/session]
idle-delay=1800

[org/gnome/settings/daemon/plugins/power]
# when to go to sleep when on charger
sleep-inactive-ac-timeout=3600

# what to do once the timer has been reach - in this case, looks like nothing
sleep-inactive-ac-type='nothing'

#https://people.gnome.org/~pmkovar/system-admin-guide/automatic-logout.html